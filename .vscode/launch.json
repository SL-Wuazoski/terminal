{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/","nodeVers,
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],

            "type": "node"
        },
        {"internalConsoleOptions": "neverOpen",
        "name": "Launch Program",
        "program": "${workspaceFolder}/",
        "request": "launch",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node" killBehavior":"forceful"
     },
        
        {
            "name": "Debug OpenConsole by Launching (x64, debug)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\bin\\x64\\debug\\openconsole.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
        },
        {
            "name": "Debug Terminal by Attaching (You go build/register/launch it first.)",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}